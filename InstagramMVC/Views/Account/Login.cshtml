@model InstagramMVC.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Вход в инстаграм";
}

<div class="row mt-5">
    <div class="col-4 mx-auto border border-2 p-4">
        <div class="mb-3">
            <img class="img-fluid mx-auto d-block border-0 w-50" src="~/images/instagram_title.png" alt="Instagram">
        </div>
        
        <form asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="mb-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <input asp-for="UserNameOrEmail" type="text" class="form-control" placeholder="Логин или эл. адрес">
                <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Пароль">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input class="form-check-input" type="checkbox" asp-for="RememberMe"/>
                <label class="form-check-label" asp-for="RememberMe">Запомнить</label>
                <span asp-validation-for="RememberMe" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="submit" class="form-control btn btn-primary" value="Войти">
            </div>
        </form>
        
        <div class="border border-2 text-center p-3">
            <p>У вас ещё нет аккаунта ? <a asp-action="Register" class="text-decoration-none">Зарегистрироваться</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}